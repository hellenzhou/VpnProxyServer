{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VPN Proxy Server Configuration",
  "description": "配置文件示例 - 包含所有可用选项和说明",
  
  "network": {
    "_comment": "网络相关配置",
    "listenAddress": "127.0.0.1",
    "listenPort": 8888,
    "maxConnections": 10000,
    "socketRecvBufferSize": 2097152,
    "socketSendBufferSize": 2097152
  },
  
  "performance": {
    "_comment": "性能调优配置",
    "numWorkerThreads": 0,
    "numIOThreads": 1,
    "sessionTimeout": 300,
    "dnsTimeout": 5,
    "natTableShards": 16,
    "packetBufferSize": 2048,
    "objectPoolSize": 1000
  },
  
  "features": {
    "_comment": "功能开关",
    "enableDNSCache": true,
    "dnsCacheTTL": 300,
    "enableMetrics": true,
    "metricsPort": 9090,
    "enableTCPForwarding": false
  },
  
  "logging": {
    "_comment": "日志配置",
    "logLevel": "info",
    "logFilePath": "",
    "logMaxSize": 104857600,
    "logMaxFiles": 5
  },
  
  "advanced": {
    "_comment": "高级配置（一般不需要修改）",
    "cleanupInterval": 30,
    "statsUpdateInterval": 1
  }
}
